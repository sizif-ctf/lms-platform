generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  teacher
  student
}

model Profile {
  id        String   @id @default(uuid())
  email     String   @unique
  role      Role
  full_name String

  classesCreated ClassEntity[] @relation("TeacherClasses")
  memberships    ClassMember[]
  submissions    Submission[]

  @@map("profiles")
}

model ClassEntity {
  id          String   @id @default(uuid())
  teacher_id  String
  name        String
  code        String   @unique // 6-char alphanumeric
  description String
  created_at  DateTime @default(now())

  teacher     Profile       @relation("TeacherClasses", fields: [teacher_id], references: [id])
  members     ClassMember[]
  lectures    Lecture[]
  assignments Assignment[]
  materials   Material[]

  @@map("classes")
}

model ClassMember {
  class_id   String
  student_id String
  joined_at  DateTime @default(now())

  class   ClassEntity @relation(fields: [class_id], references: [id], onDelete: Cascade)
  student Profile     @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@id([class_id, student_id])
  @@map("class_members")
}

model Lecture {
  id         String   @id @default(uuid())
  class_id   String
  title      String
  content    String
  created_at DateTime @default(now())

  class ClassEntity @relation(fields: [class_id], references: [id], onDelete: Cascade)

  @@map("lectures")
}

model Assignment {
  id          String   @id @default(uuid())
  class_id    String
  title       String
  description String
  max_score   Int
  created_at  DateTime @default(now())

  class       ClassEntity  @relation(fields: [class_id], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@map("assignments")
}

model Submission {
  id              String   @id @default(uuid())
  assignment_id   String
  student_id      String
  content         String
  file_url        String?
  score           Int?
  teacher_comment String?
  submitted_at    DateTime @default(now())

  assignment Assignment @relation(fields: [assignment_id], references: [id], onDelete: Cascade)
  student    Profile    @relation(fields: [student_id], references: [id], onDelete: Cascade)

  @@unique([assignment_id, student_id])
  @@map("submissions")
}

model Material {
  id         String   @id @default(uuid())
  class_id   String
  title      String
  file_url   String
  created_at DateTime @default(now())

  class ClassEntity @relation(fields: [class_id], references: [id], onDelete: Cascade)

  @@map("materials")
}
